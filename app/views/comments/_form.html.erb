<%= form_for [post, comment] do |f| %>
  <div class="media">
  <h2><%=Comment%></h2>

  <% if comment.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(comment.errors.count, "error") %>.</h4>
      <ul>
        <% comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>   
    </div>
  <% end %>
  

  <div class="col-md-4" >    
    <p>
      <%= f.label :body %>
      <%= f.text_field :body %>
      <%= f.submit "create comment" %>
    </p>
  </div>

<% end %>
</div>



 