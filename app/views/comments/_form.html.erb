<%= form_for [post, post.comments.build] do |f| %>
  <div class="media">

  <% if comment.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(comment.errors.count, "error") %>.</h4>
      <ul>
        <% comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>   
    </div>
  <% end %>
  

    <%= form_group_tag(comment.errors[:body]) do %>
      <%= f.text_area :body, rows: 4, class: 'form-control', placeholder: "Enter Comment" %>
      <% end %>
  <div class="form-group">
      <%= f.submit "Save comment", class: 'btn btn-success' %>
  </div>
<% end %>
</div>



 