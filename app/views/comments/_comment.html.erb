
 
<!-- needs to take topic and post local variable
 -->
<div class="media"
  <div class="media-body">
  <small>
    <%=link_to comment.user.name, comment.user %> commented <%= time_ago_in_words(comment.created_at) %> ago
    <% if policy(Post.new).create? %> 
    <% end %>
  </small>  
  </div>
  <p><%=comment.body%></p>
</div> 

<div class="col-md-4"
  <%=simple_form_for @comments do |f| %>
    <div class="form-group">
      <%= f.label :comment %>
      <%= f.text_field :name %>
    </div>
  
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_field :body %>
    <%= f.submit "Create Comment", class: 'btn btn-success'%>
    </div>
<% end %>
</div>


 
